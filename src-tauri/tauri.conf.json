{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "stackscribe",
  "version": "0.1.0",
  "identifier": "com.stackscribe.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "StackScribe",
        "width": 1200,
        "height": 800
      }
    ],
    "security": {
      "csp": null
    },
    "menu": [
      {
        "label": "StackScribe",
        "submenu": [
          {
            "label": "About StackScribe",
            "role": "about"
          }
        ]
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/SSlogo.svg",
      "icons/SSlogo.png",
      "icons/SSicon.png",
      "icons/SSicon.icns",
      "icons/SSicon.ico"
    ]
  }
}
